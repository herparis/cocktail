{
  "extends": "react-app",
  "rules": {
    "react/jsx-sort-props": [
      2,
      {
        "callbacksLast": true,
        "shorthandFirst": true,
        "noSortAlphabetically": false
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      2,
      "single"
    ],
    "simple-import-sort/sort": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "comma-spacing": [
      2,
      {
        "after": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  },
  "plugins": [
    "simple-import-sort"
  ]
}